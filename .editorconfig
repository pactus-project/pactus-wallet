# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
# Wraps text at the max_line_length automatically.
max_line_length = 80
prose_wrap = always

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
max_line_length = 120

