{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**",
    "**/out/**",
    "**/.modules/**",
    "**/public/**"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.mjs"],
      "rules": {
        "prettier/prettier": ["error"]
      }
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["error", { "allow": ["warn", "error", "info"] }]
  }
} 